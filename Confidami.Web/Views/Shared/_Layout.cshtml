@using Confidami.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title | domain.it</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">

        @Html.Partial("_MainMenu")

        <div class="col-lg-12">

            <header>
                <p class="lead">@ViewBag.Heding</p>
            </header>

            <main>
                <div class="col-lg-8 col-sm-6">@RenderBody()</div>
            </main>

            <div class="col-lg-4 col-sm-6">@Html.Partial("_Sidebar")</div>

            <footer>
                <div class="col-lg-12 col-md-12">@Html.Partial("_Footer")</div>
            </footer>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/mainjs")

    @*@Scripts.Render("~/bundles/jqueryval")*@ 
    
    @Styles.Render("~/Content/parsleycss")
    @Scripts.Render("~/bundles/parsleyvalidator")
    


    @Scripts.Render("~/bundles/dropzonescripts")

    @RenderSection("scripts", required: false)

</body>
</html>