@using Confidami.Common
@model Confidami.Web.ViewModel.PostViewModel


<div class="col-lg-12">
    <div class="row">
        <header>
            <h4>@ViewBag.Heding</h4>
        </header>
    </div>
</div>



@if (Model != null)
{
    foreach (var post in Model.Posts)
    {
        if (Model.IsAdmin)
        {
            <form role="form" action="@Url.Action(ActionsStore.Approve, ControllerStore.Manager)" method="POST">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <label>@Html.RouteLink("Titolo:" + post.Title, "SingleContentRoute", new { categoryName = post.CategorySlug, id = post.IdPost,slugTitle=post.TitleSlug }, null)</label>

                                <br />
                                <label>Categoria: @post.CategoryPost</label>
                                <br />
                                <label>Allegati: @(post.HasAttachMents ? "Si" : "No")</label>
                            </div>
                            <div class="panel-body">
                                <textarea>@post.Body</textarea>
                            </div>
                            <div class="panel-footer">
                                <input type="hidden" value="@post.IdPost" name="idpost" />
                                <input type="submit" class="btn btn-primary" value="OnApprovation" name="action:OnApprovation">
                                <input type="submit" class="btn btn-primary" value="Reject" name="action:Reject">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <label>@Html.RouteLink("Titolo:" + post.Title, "SingleContentRoute", new { categoryName = post.CategorySlug, id = post.IdPost }, null)</label>

                            <br />
                            <label>Categoria: @post.CategoryPost</label>
                            <br />
                            <label>Allegati: @(post.HasAttachMents ? "Si" : "No")</label>
                        </div>
                        <div class="panel-body">
                            <textarea>@post.Body</textarea>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}