@using Confidami.Common
@model Confidami.Web.ViewModel.PostViewModel


<div class="col-lg-12">
    <div class="row">
        <header>
            <h4>@ViewBag.Heding</h4>
        </header>
    </div>
</div>



@if (Model != null)
{
    foreach (var post in Model.Posts)
    {

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <label>@Html.RouteLink("Titolo:" + post.Title, "SingleContentRoute", new { categoryName = post.CategorySlug, id = post.IdPost, slugTitle = post.TitleSlug }, null)</label>

                        <br />
                        <label>Categoria: @post.CategoryPost</label>
                        <br />
                        <label>Allegati: @(post.HasAttachMents ? "Si" : "No")</label>
                    </div>
                    <div class="panel-body">
                        <textarea>@Html.Raw(post.Body)</textarea>
                    </div>
                </div>
            </div>
        </div>
    }
<ul class="pager">
  <li class="disabled"><a href="#">Precedente</a></li>
  <li><a href="#">Successivo</a></li>
</ul>
}