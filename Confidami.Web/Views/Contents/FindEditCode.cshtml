@using Confidami.Common
@model Confidami.Web.ViewModel.EditPostCodeViewModel

@{
    ViewBag.Title = "Denuncia - Inserisci codice modifica";
    ViewBag.Heding = "Modifica Denuncia";
}

@Html.ValidationSummary(false);
<form action="@Url.RouteUrl(RouteStore.FindEditCodeSubmit)" method="POST">
    <div class="form-group">
        <label for="editCode">EditCode</label>
        <input type="text" id="editCode" name="editCode" class="form-control" value="@Model.EditCode" />
    </div>
    <div class="form-group">
        <label for="password">Password(chiave segreta associata all'edit code per modificare il post prima dell'approvazione)</label>
        <input type="password" id="password" name="password" class="form-control" value="@Model.Password" />
    </div>
    <button type="submit" value="submit" class="btn btn-default">Salva</button>
</form>
