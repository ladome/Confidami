<!-- search form in get per indicizzare le visualizzazioni di pagina -->
<article>
    <form class="form-horizontal" action="" method="get" data-parsley-validate>

        <div class="form-group">
            <label for="k" class="col-sm-2 control-label">Parola chiave</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="k" placeholder="Parola chiave..." data-toggle="popover" data-content="Cerca nei testi e titoli" data-trigger="hover" data-placement="top" title="Parola chiave" required>
            </div>
        </div>

        <div class="form-group">
            <label for="category" class="col-sm-2 control-label">Categoria</label>
            <div class="col-sm-10">
                <select class="form-control" id="cat" name="category" data-toggle="popover" data-content="Filtra per categoria" data-trigger="hover" data-placement="top" title="Categoria">
                    <option>Tutte</option>
                    <option>C 1</option>
                    <option>C 2</option>
                    <option>C 3</option>
                    <option>C 4</option>
                    <option>C 5</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success  btn-sm">Cerca</button>
            </div>
        </div>

    </form>
</article>
